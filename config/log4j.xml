<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "http://toolkit.alibaba-inc.com/dtd/log4j/log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/">
	<!-- ===================================================================== -->
	<!-- 以下是appender的定义，定义日志输出的目的地、输出方式及过滤级别        -->
	<!-- ===================================================================== -->
	<appender name="log-file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="./logs/analyzeDpc.log"/>
		<param name="append" value="true"/>
		<param name="encoding" value="UTF-8"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyy-MM-dd HH:mm:ss} [%-5p] {%l} - %m%n"/>
		</layout>
	</appender>
	<appender name="log-console" class="org.apache.log4j.ConsoleAppender">
		<param name="encoding" value="UTF-8"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyy-MM-dd HH:mm:ss} [%-5p] {%l} - %m%n"/>
		</layout>
	</appender>
	<!-- 过滤出我们想要的日志信息，实现按照日志等级把日志输出到不同地方的目的 -->
	<appender name="error-log-file" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="file" value="./logs/analyzeDpc.error.log"/>
		<param name="append" value="true"/>
		<param name="encoding" value="UTF-8"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{yyy-MM-dd HH:mm:ss} [%-5p] {%l} - %m%n"/>
		</layout>
		<filter class="org.apache.log4j.varia.LevelRangeFilter">
			<param name="LevelMin" value="ERROR"/>
			<param name="LevelMax" value="ERROR"/>
		</filter>
	</appender>
	<!-- ===================================================================== -->
	<!-- 日志写出器：每一个logger可以有多个输出目的地和输出方式                -->
	<!-- ===================================================================== -->

	<!-- ===================================================================== -->
	<!-- Root logger 所有logger的基类，没有定义的logger将会使用root logger     -->
	<!-- ===================================================================== -->
	<root>
		<level value="INFO"/>
		<appender-ref ref="log-file"/>
		<appender-ref ref="log-console"/>
		<appender-ref ref="error-log-file"/>
	</root>
</log4j:configuration>
